extends layout

block content
  ul.breadcrumb
    li
      i.icon-home
      a(href='/catalog') Home
      i.icon-angle-right
    li
      a(href='/catalog/tags') Tags
      i.icon-angle-right
    li
      a(href=tag.url) #{tag.name}
    li
      a(href=tag.url+'/delete') Delete #{tag.name}

  h1 #{title}: #{tag.name}

  
  if tag_products.length
  
    p #[strong Delete the following products before attempting to delete this tag.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Products
    
      dl
      each product in tag_products
        dt 
          a(href=product.url) #{product.productName}
        dd #{product.description}

  else
    p Do you really want to delete this Tag?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id',required='true',value=tag._id)
      button.btn.btn-primary(tag='submit') Delete