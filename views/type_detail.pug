extends layout

block content
  ul.breadcrumb
    li
      i.icon-home
      a(href='/catalog') Home
      i.icon-chevron-right
    li
      a(href='/catalog/types') Types
      i.icon-chevron-right
    li
      a(href=type.url) #{type.name}
  h1 Type: #{type.name}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Products
    
    dl
    each product in type_products
      dt 
        a(href=product.url) #{product.productName}
      dd #{product.description}

    else
      p This type has no products.

  hr
  p
    a(href=type.url+'/delete') Delete type
  p
    a(href=type.url+'/update') Update type