extends layout

block content
  ul.breadcrumb
    li
      i.icon-home
      a(href='/catalog') Home
      i.icon-angle-right
    li
      a(href='/catalog/types') Types
      i.icon-angle-right
    li
      a(href=type.url) #{type.name}
    li
      a(href=type.url+'/delete') Delete #{type.name}

  h1 #{title}: #{type.name}

  
  if type_products.length
  
    p #[strong Delete the following products before attempting to delete this type.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Products
    
      dl
      each product in type_products
        dt 
          a(href=product.url) #{product.productName}
        dd #{product.description}

  else
    p Do you really want to delete this Type?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=type._id )

      button.btn.btn-primary(type='submit') Delete